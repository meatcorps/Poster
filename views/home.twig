{% set active_page = "home" %}
{% extends "extends/base.twig" %}

{% block title %}Poster!{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Most recent posts</h1>
    </div>
    
    {% for post in posts %}  
    <div class="blog-post">
        <h2 class="blog-post-title">{{ post['title'] }}</h2>
        <p class="blog-post-meta">At {{ post['updated_at'] | date('H:i - d M Y') }} by <a href="#">{{ post['author'] }}</a></p>
        {{ post['message'] | raw }}
    </div>
    {% endfor %}
{% endblock %}